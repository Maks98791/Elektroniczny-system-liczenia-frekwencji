@model GuestsInfoViewModel

@{
    ViewData["Title"] = "Home Page";
}

    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h3>Stan osób na godzine: @Model.CurrentDate</h3>
                </div>

                <div class="card-body text-center">
                    <h4>Weszło: @Model.GuestsIn</h4>
                    <h4>Wyszło: @Model.GuestsOut</h4>
                    <h3>W środku: @Model.GuestsInside </h3>
                </div>

                <div class="card-footer text-center">
                    <a asp-controller="home" asp-action="index" class="btn btn-primary">Odśwież</a>
                </div>
            </div>
        </div>
    </div>

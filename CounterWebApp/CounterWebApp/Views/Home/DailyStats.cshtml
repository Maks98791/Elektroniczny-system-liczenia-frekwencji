@model CounterWebApp.ViewModels.DailyCounterViewModel

@{
    ViewData["Title"] = "DailyStats";
}

<h1>Dzienne statystyki</h1>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h3>Stan osób na dzień: @Model.Date</h3>
            </div>
            <div class="card-body text-center">
                <h4>Odwiedzających: @Model.Visitors</h4>
            </div>
        </div>
    </div>
</div>
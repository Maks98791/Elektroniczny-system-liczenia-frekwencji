@model List<CounterWebApp.ViewModels.StatisticsViewModel>

@{
    ViewData["Title"] = "DisplayStatistics";
}

<h1>Statystyki</h1>

<table class="table">
    <thead>
        <tr>
            <th>Data Raportu</th>
            <th>Weszło</th>
            <th>Wyszło</th>
        </tr>
    </thead>
    <tbody>
        @for(int i=0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].RaportDate</td>
                <td>@Model[i].GuestsIn</td>
                <td>@Model[i].GuestsOut</td>
            </tr>
        }
    </tbody>
</table>


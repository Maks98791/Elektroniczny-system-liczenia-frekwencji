@model CounterWebApp.ViewModels.StatParamsViewModel

@{
    ViewData["Title"] = "Statistics";
}

<h1>Statystyki</h1>

<h3>Wybierz zakres</h3>
    
<form asp-controller="home" asp-action="statistics" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.BeginDate" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.BeginDate" placeholder="Begin date" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.EndDate" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.EndDate" placeholder="End date" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Filtruj</button>
        </div>
    </div>
</form>

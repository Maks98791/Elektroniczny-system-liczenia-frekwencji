@model CounterWebApp.ViewModels.DateViewModel

@{
    ViewData["Title"] = "DailyCounter";
}

<h1>Dzienne statystyki</h1>

<h3>Wybierz date</h3>

<form asp-controller="home" asp-action="DailyCounter" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="@Model.Date" class="col-form-label col-sm-2"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Date" placeholder="Date" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <button class="btn btn-primary" type="submit">Filtruj</button>
    </div>
</form>

